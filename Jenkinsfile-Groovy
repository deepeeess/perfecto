#!/usr/bin/env groovy
properties([gitLabConnection('deepeeess-gitlab')])
node {

  stage('\u2776 init') {
    echo sh(returnStdout: true, script: 'env')
  }

  stage('\u2777 checkout') {
    checkout scm
  }

  stage("build") {
    gitlabCommitStatus("build") {
      echo "\u2600 BUILD_URL=${env.BUILD_URL}"
    }
  }

  stage("test") {
    gitlabCommitStatus("test") {
      // your test steps
    }
  }
}
